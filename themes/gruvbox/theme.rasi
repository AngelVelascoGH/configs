* {
    /* Gruvbox Hard Palette */
    bg0:     #1d2021;
    bg1:     #282828;
    bg2:     #3c3836;
    bg3:     #504945;

    fg0:     #fbf1c7;
    fg1:     #ebdbb2;
    fg2:     #d5c4a1;

    red:     #fb4934;
    green:   #b8bb26;
    yellow:  #fabd2f;
    blue:    #83a598;
    magenta: #d3869b;
    cyan:    #8ec07c;

    /* Semantic keys */
    accent:  @green;   /* Aqua/Green looks great on Gruvbox */
    urgent:  @red;
}
